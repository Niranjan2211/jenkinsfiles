//#!/usr/bin/env groovy
//def username = 'Jenkins'
pipeline {
    agent any 
    stages {
        stage('Build') {
            steps {
                echo 'Hello world!' 
            }
        }
        stage('Deploy') {
            when {
              expression {
                //currentBuild.result == null || currentBuild.result != 'SUCCESS'
               currentBuild.result == 'SUCCESS' 
              }
            }
            steps {
                sh 'echo When condition is working fine'
            }
        }
	}
}